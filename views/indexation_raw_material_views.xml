<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form of indexation raw material lines -->
        <record model="ir.ui.view" id="indexation_raw_material_lines_tree_view">
            <field name="name">indexation.raw_material.lines.tree</field>
            <field name="model">indexation.raw_material.lines</field>
            <field name="arch" type="xml">
                <tree string="Indexation Raw Material Lines">
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <field name="purchase_id"/>
                    <field name="indexation_value"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="indexation_raw_material_lines_form_view">
            <field name="name">indexation.raw_material.lines.form</field>
            <field name="model">indexation.raw_material.lines</field>
            <field name="arch" type="xml">
                <form string="Indexation Raw Material line">
                    <group>
                        <field name="purchase_id"/>
                        <field name="indexation_value"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_indexation_raw_material_lines_form">
            <field name="name">Indexation Raw Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">indexation.raw_material.lines</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new line of indexation value raw material.
                </p>
                <p>
                    A value is automatic added when an purchase order is done.
                </p>
            </field>
        </record>

        <!-- Form of indexation raw material log lines -->
        <record model="ir.ui.view" id="indexation_raw_material_log_lines_tree_view">
            <field name="name">indexation.raw_material.log.lines.tree</field>
            <field name="model">indexation.raw_material.log.lines</field>
            <field name="arch" type="xml">
                <tree string="Indexation Raw Material log Lines" create="false" edit="false">
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="indexation_raw_material_log_lines_form_view">
            <field name="name">indexation.raw_material.log.lines.form</field>
            <field name="model">indexation.raw_material.log.lines</field>
            <field name="arch" type="xml">
                <form string="Indexation Raw Material log" create="false" edit="false">
                    <group>
                        <field name="message"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_indexation_raw_material_log_lines_form">
            <field name="name">Indexation Raw Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">indexation.raw_material.log.lines</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Empty log.
                </p>
                <p>
                    A value is automatic added when execute algorithm of indexation raw material.
                </p>
            </field>
        </record>

        <!--  Wizard run algorithm -->
        <record id="view_compute_algo_indexation_raw_material_wizard" model="ir.ui.view">
            <field name="name">Run indexation</field>
            <field name="model">indexation.raw_material.compute.all</field>
            <field name="arch" type="xml">
                <form string="Compute indexation raw material">
                    <p>
                        Compute all indexation raw material in the background.
                    </p>
                    <footer>
                        <button name="compute_indexation_raw_material" string="Compute indexation" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_compute_indexation_raw_material" model="ir.actions.act_window">
            <field name="name">Compute indexation</field>
            <field name="res_model">indexation.raw_material.compute.all</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Action button -->
        <record id="action_update_indexation_raw_material_lines" model="ir.actions.server">
            <field name="name">Update indexation Raw Material on specific line</field>
            <field name="model_id" ref="model_indexation_raw_material_lines"/>
            <field name="code">model.update_indexation_raw_material_lines()</field>
        </record>
    </data>
</odoo>